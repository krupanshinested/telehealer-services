<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/app_gradient_start</item>
        <item name="android:statusBarColor">@color/app_status_bar_color1</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="activtiy_background">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="actionbar_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/app_background_gradient</item>
    </style>

    <style name="button_light">
        <item name="android:background">@drawable/btn_white_drawable</item>
        <item name="android:textColor">@color/app_gradient_start</item>
    </style>

    <style name="button_dark">
        <item name="android:background">@drawable/btn_transparent_whiteborder_drawable</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="button_app_background_white_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_enable_disable_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="text_light">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="card_style">
        <item name="cardUseCompatPadding">true</item>
        <item name="android:padding">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_title_dark">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="text_app_color">
        <item name="android:textColor">@color/app_gradient_start</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:alpha">1</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="text_disabled_alpha_grey">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="text_overlay_style" parent="FancyShowCaseDefaultTitleStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <style name="text_title_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_title_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <style name="text_title_lignt_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_title_app_color">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/app_gradient_start</item>
    </style>

    <style name="text_title_bold_app_color">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_gradient_start</item>
    </style>

    <style name="text_sub_title">
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sub_title_size</item>
    </style>

    <style name="text_sub_title_bold">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sub_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_sub_title_light">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_sub_title_size</item>
    </style>

    <style name="text_sub_title_lignt_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sub_title_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_sub_title_app_color">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sub_title_size</item>
        <item name="android:textColor">@color/app_gradient_start</item>
    </style>

    <style name="text_sub_title_bold_app_color">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_sub_title_size</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_gradient_start</item>
    </style>

    <style name="card_title_text" parent="text_title_bold">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:layout_marginStart">@dimen/card_default_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="card_sub_title_text" parent="text_sub_title">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|top</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="toolbar_menu_light">
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="calendar_text_appearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/calendar_date_selector</item>
    </style>

    <style name="custom_alert_dialog_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/app_gradient_start</item>
    </style>

    <style name="spinner_text_style" parent="text_title_bold">
        <item name="android:paddingStart">4dp</item>
    </style>

    <style name="registration_text_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/registration_text_title_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="StripeDefaultTheme" parent="AppTheme">
        <item name="colorPrimary">@color/app_gradient_start</item>
        <item name="colorPrimaryDark">@color/app_status_bar_color1</item>
        <item name="colorAccent">@color/app_status_bar_color1</item>
            <item name="colorControlNormal">@color/app_status_bar_color1</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="AddChargeEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/border_black</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/colorBlack_50</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TransactionRowLbl">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TransactionRowValue">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="TransactionRowValue.Details">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="TransactionListRow">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>
</resources>
