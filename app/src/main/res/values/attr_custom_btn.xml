<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButton" >
        <attr name="background_color" format="color"/>
        <attr name="stroke_color" format="color"/>
        <attr name="stroke_width" format="integer"/>
        <attr name="corner_radius" format="dimension"/>
        <attr name="top_left_corner" format="float"/>
        <attr name="top_right_corner" format="float"/>
        <attr name="bottom_left_corner" format="float"/>
        <attr name="bottom_right_corner" format="float"/>
        <attr name="text_color" format="color"/>
        <attr name="background_drawable" format="reference"/>
        <attr name="app_gradient" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RoundCornerConstraintLayout">
        <attr name="lay_stroke_color" format="color" />
        <attr name="lay_background_color" format="color" />
        <attr name="lay_top_left_corner" format="dimension" />
        <attr name="lay_top_right_corner" format="dimension" />
        <attr name="lay_bottom_left_corner" format="dimension" />
        <attr name="lay_bottom_right_corner" format="dimension" />
        <attr name="lay_corner_radius" format="dimension" />
    </declare-styleable>

</resources>