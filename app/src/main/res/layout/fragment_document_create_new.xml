<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/appbar_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <include layout="@layout/appbar_back_with_title_app_color" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/document_name_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar_ll">

        <EditText
            android:id="@+id/document_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/file_name"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/document_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="@string/documents"
        android:textAllCaps="true"
        android:textColor="@color/app_gradient_start"
        app:layout_constraintTop_toBottomOf="@+id/document_name_til" />

    <ImageView
        android:id="@+id/document_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_orders_documents"
        app:layout_constraintBottom_toTopOf="@+id/add_btn"
        app:layout_constraintTop_toBottomOf="@+id/document_tv" />

    <Button
        android:id="@+id/add_btn"
        style="@style/button_app_background_white_text"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>