<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_notifications_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_count_tv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/circular_selected_indicator"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/colorWhite"
        android:textSize="6sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/notification_icon"
        app:layout_constraintEnd_toEndOf="@id/notification_icon"
        app:layout_constraintTop_toTopOf="@+id/notification_icon" />
</android.support.constraint.ConstraintLayout>