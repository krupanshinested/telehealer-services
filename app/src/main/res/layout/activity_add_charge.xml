<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="@string/lbl_transaction"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Transaction" />

    <LinearLayout
        android:id="@+id/layoutChargeType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/rvChargeType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name_tv"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/tvChargeType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:hint="@string/lbl_type_of_charge"
            android:textColorHint="@color/colorBlack_50"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_keyboard_arrow_down_24dp"
            app:tint="@color/colorGrey" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChargeType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black"
        android:clipToPadding="false"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/layoutReason"
        app:layout_constraintEnd_toEndOf="@id/layoutChargeType"
        app:layout_constraintStart_toStartOf="@id/layoutChargeType"
        app:layout_constraintTop_toBottomOf="@id/layoutChargeType"
        tools:itemCount="100" />


    <LinearLayout
        android:id="@+id/layoutReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/rvReasonType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvChargeType"
        app:layout_goneMarginTop="15dp">

        <TextView
            android:id="@+id/tvReason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/lbl_reason"
            android:textColorHint="@color/colorBlack_50"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivReasonArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_keyboard_arrow_down_24dp"
            app:tint="@color/colorGrey" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReasonType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black"
        android:clipToPadding="false"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/etFees"
        app:layout_constraintEnd_toEndOf="@id/layoutReason"
        app:layout_constraintStart_toStartOf="@id/layoutReason"
        app:layout_constraintTop_toBottomOf="@id/layoutReason"
        tools:itemCount="100" />

    <EditText
        android:id="@+id/etFees"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border_black"
        android:hint="@string/lbl_add_fees"
        android:inputType="number"
        android:padding="12dp"
        android:textColorHint="@color/colorBlack_50"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/btnPending"
        app:layout_constraintEnd_toEndOf="@id/layoutReason"
        app:layout_constraintStart_toStartOf="@id/layoutReason"
        app:layout_constraintTop_toBottomOf="@id/rvReasonType"
        app:layout_goneMarginTop="15dp" />

    <Button
        android:id="@+id/btnPending"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_secondary"
        android:text="@string/pending"
        android:textColor="@color/bt_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_primary"
        android:text="@string/submit"
        android:textColor="@color/bt_white"
        app:layout_constraintBottom_toBottomOf="@id/btnPending"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPending"
        app:layout_constraintTop_toTopOf="@id/btnPending" />


</androidx.constraintlayout.widget.ConstraintLayout>