<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_default">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_fix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:text="@string/accept"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/unit"
            style="@style/text_sub_title_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:text="@string/mgdl"
            android:textColor="@color/colorGrey"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:text="@string/abnormal_vital"
            android:textColor="@color/red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/msgtopatient"
            style="@style/text_sub_title_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:background="@color/colorWhite"
            android:text="@string/msg_to_patient"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:background="@color/colorWhite"
            android:text="@string/msg_provide_stripe_information"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/msgtopatient" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_editable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_threshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_single_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <EditText
                    android:id="@+id/et_lower"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/margin_et_default"
                    android:layout_marginBottom="@dimen/margin_et_default"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="1000"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:focusable="false"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tv_seprator"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:background="@color/colorWhite"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:text="@string/dash"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintStart_toEndOf="@+id/et_lower"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/et_upper"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:minWidth="60dp"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:background="@drawable/edt_shape_corner_grey"
                    android:gravity="center"
                    android:text="1000"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_seprator"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_double_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <EditText
                    android:id="@+id/et_lower_left"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/margin_et_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_marginBottom="@dimen/margin_et_default"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="1000"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:focusable="false"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tv_seprator_lower"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:background="@color/colorWhite"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:text="@string/slash"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintStart_toEndOf="@+id/et_lower_left"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/et_lower_right"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="1000"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:focusable="false"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    app:layout_constraintStart_toEndOf="@+id/tv_seprator_lower"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tv_seprator_et"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:background="@color/colorWhite"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:text="@string/dash"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintStart_toEndOf="@+id/et_lower_right"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/et_upper_left"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:background="@drawable/edt_shape_corner_grey"
                    android:gravity="center"
                    android:text="1000"
                    android:minWidth="60dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_seprator_et"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tv_seprator_right"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:background="@color/colorWhite"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:text="@string/slash"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintStart_toEndOf="@+id/et_upper_left"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/et_upper_right"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:layout_marginStart="@dimen/margin_default"
                    android:background="@drawable/edt_shape_corner_grey"
                    android:gravity="center"
                    android:text="1000"
                    android:minWidth="60dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_seprator_right"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_remove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:drawableStart="@drawable/ic_minus"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:drawableTint="@color/red"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/et_message"
            android:textSize="1dp"
            android:visibility="visible"
            android:textColor="@color/colorBlack"
            />
        <EditText
            android:id="@+id/et_message"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@drawable/edt_shape_corner_grey"
            android:text="@string/telehealth_description"
            android:scrollbarStyle="insideInset"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:maxHeight="90dp"
            android:padding="5dp"
            android:layout_margin="15dp"
            app:layout_constraintStart_toEndOf="@id/tv_remove"
            app:layout_constraintTop_toBottomOf="@+id/cl_threshold"
            />
        <LinearLayout
            android:id="@+id/ll_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_et_default"
            android:layout_marginEnd="@dimen/margin_et_default"
            android:layout_marginBottom="@dimen/margin_et_default"
            app:layout_constraintStart_toStartOf="@id/cl_threshold"
            app:layout_constraintTop_toBottomOf="@+id/et_message">
            <Switch
                android:id="@+id/switch_abnormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/mark_as_abnormal"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:switchPadding="20dp"
                android:layoutDirection="rtl"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_add_circle_black_24dp"
            android:drawableTint="@color/app_gradient_start"
            android:layout_marginTop="20dp"
            android:text="@string/add_value"
            android:textAlignment="center"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_switch"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/splitter"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorGrey_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/rv_threshold"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>