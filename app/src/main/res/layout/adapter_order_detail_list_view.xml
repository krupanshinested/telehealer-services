<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_cv"
    style="@style/card_style">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_civ"
            android:layout_width="@dimen/card_circular_image_size"
            android:layout_height="@dimen/card_circular_image_size"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/profile_placeholder" />

        <TextView
            android:id="@+id/item_title_tv"
            style="@style/text_title_dark"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center|left"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_civ"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/dummy_text" />

        <TextView
            android:id="@+id/item_sub_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:ems="3"
            android:gravity="center|left"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/status_iv"
            app:layout_constraintStart_toEndOf="@+id/item_civ"
            app:layout_constraintTop_toBottomOf="@+id/item_title_tv"
            tools:text="@string/dummy_text" />


        <ImageView
            android:id="@+id/status_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_sub_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_sub_title_tv"
            tools:src="@drawable/ic_close_red_24dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

