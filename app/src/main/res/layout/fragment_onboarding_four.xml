<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/onboarding_page_5_bg" />

    <ImageView
        android:id="@+id/prescription_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/onboarding_page_5_prescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4" />

    <ImageView
        android:id="@+id/phone_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_page_5_phone"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/kitepath_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_page_5_kite_path"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/phone_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phone_iv" />

    <ImageView
        android:id="@+id/kite_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/onboarding_page_5_kite"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/kitepath_iv"
        app:layout_constraintEnd_toEndOf="@id/kitepath_iv"
        app:layout_constraintStart_toEndOf="@id/kitepath_iv"
        app:layout_constraintTop_toTopOf="@+id/kitepath_iv" />

</android.support.constraint.ConstraintLayout>