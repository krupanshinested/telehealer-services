<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/fragment_viewpager_holder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.thealer.telehealer.views.onboarding.OnBoardingViewPagerFragment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fragment_action_holder"/>

    <fragment
        android:id="@+id/fragment_action_holder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.thealer.telehealer.views.onboarding.OnBoardingActionFragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fragment_viewpager_holder"/>
</android.support.constraint.ConstraintLayout>